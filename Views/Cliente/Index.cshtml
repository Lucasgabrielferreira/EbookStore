@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Lista de Cliente";
 }
 <div class="d-flex justify-content-between align-items-center">
    <h1>Lista de Clientes</h1>
    <a class="btn btn-success" asp-action="Create">Cadastar novo Cliente</a>
 </div>


<div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach(var cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Nome</th>
                        <td>@cliente.Email</td>
                        <td>
                            <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Cliente" asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }             
            } 
        </tbody>
    </table>
    <footer>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Pagina inicial</a>
    </footer>
</div>